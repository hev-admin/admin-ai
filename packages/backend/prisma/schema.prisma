generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  email     String   @unique
  password  String
  nickname  String?
  avatar    String?
  phone     String?
  status    Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roles     UserRole[]
  createdBy String?

  @@index([status])
  @@index([createdAt])
  @@map("users")
}

model Role {
  id          String   @id @default(uuid())
  name        String   @unique
  code        String   @unique
  description String?
  status      Int      @default(1)
  sort        Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  users       UserRole[]
  permissions RolePermission[]

  @@index([status])
  @@index([sort])
  @@map("roles")
}

model UserRole {
  id        String   @id @default(uuid())
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
  @@map("user_roles")
}

model Menu {
  id         String   @id @default(uuid())
  parentId   String?
  name       String
  path       String?
  component  String?
  redirect   String?
  icon       String?
  title      String
  permission String?
  type       Int      @default(1)
  visible    Int      @default(1)
  status     Int      @default(1)
  sort       Int      @default(0)
  keepAlive  Int      @default(0)
  external   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  parent     Menu?    @relation("MenuToMenu", fields: [parentId], references: [id])
  children   Menu[]   @relation("MenuToMenu")
  roles      RolePermission[]

  @@index([parentId])
  @@index([status])
  @@index([sort])
  @@index([type])
  @@map("menus")
}

model RolePermission {
  id        String   @id @default(uuid())
  roleId    String
  menuId    String
  createdAt DateTime @default(now())
  role      Role     @relation(fields: [roleId], references: [id], onDelete: Cascade)
  menu      Menu     @relation(fields: [menuId], references: [id], onDelete: Cascade)

  @@unique([roleId, menuId])
  @@index([roleId])
  @@index([menuId])
  @@map("role_permissions")
}

model OperationLog {
  id         String   @id @default(uuid())
  userId     String?
  username   String?
  module     String
  action     String
  method     String
  path       String
  ip         String?
  userAgent  String?
  params     String?
  result     String?
  status     Int      @default(1)
  duration   Int      @default(0)
  createdAt  DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([module])
  @@map("operation_logs")
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String
  group     String   @default("system")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([group])
  @@map("settings")
}
